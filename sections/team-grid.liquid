<div class="main-cls wrapper--brick" id="{{ section.id }}">
  <div class="main-heading">
    <h1> {{ section.settings.heading }} </h1>
  </div>
  <div class="main-block-section">
    {% for block in section.blocks %}
    <div class="main-block">
      <img src="{{ block.settings.image | img_url:'master' }}">
      <h2 class="h4 standard__heading aos-init aos-animate"> {{ block.settings.heading }} </h2>
      <p> {{ block.settings.text }} </p>
    </div>
    {% endfor %}
  </div>
</div>




{% schema %}
  {
    "name": "Team Grid",
    "settings": [
{
"id" : "heading",
"type" : "text",
"label" : "Heading"
}
],
"blocks" : [
{
"name" : "block",
"type" : "block",
"settings" : [
{
"id" : "image",
"type" : "image_picker",
"label" : "Image"
},
{
"id" : "heading",
"type" : "text",
"label" : "Heading",
"default" : "BEN L."
},
{
"id" : "text",
"type" : "textarea",
"label" : "Text"
}
]
}
],
"presets" : [
{
"name" : "Team Grid"
}
]
  }
{% endschema %}

<style>
  
  .main-block-section{
    display:flex;
    flex-wrap:wrap;
  }
  .main-block{
    width:20%;
    text-align:center;
  }
  .main-block img{
    width:90%;
    height:auto;
  }
  .main-heading h1{
    text-align:center;
  }
  
  @media(max-width:749px){
    .main-block-section{
    display:block;
  }
  .main-block{
    width:60%;
    margin:auto;
  }
    
</style>